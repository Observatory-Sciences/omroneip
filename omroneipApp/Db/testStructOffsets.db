#Get offset from with Time struct
record(longin, "$(P)readDInt1") {
    field(SCAN, "I/O Intr")
    field(DTYP, "asynInt32")
    field(INP, "@asyn($(PORT), 0, 1)@$(POLLER) testDint DINT 1 testTimeStruct2[1] none")
}
#Get offset from within Time struct embedded in another struct
#Offset 4 is an array of Time structs. Offset 0 is the first struct in the array. Offset 1 is the DINT within the struct
record(longin, "$(P)readDInt2") {
    field(SCAN, "I/O Intr")
    field(DTYP, "asynInt32")
    field(INP, "@asyn($(PORT), 0, 1)@$(POLLER) testDint DINT 1 testArrayStruct2[4][0][1] none")
}

record(ai, "$(P)readFloat") {
    field(SCAN, "I/O Intr")
    field(DTYP, "asynFloat64")
    field(INP, "@asyn($(PORT), 0, 1)@$(POLLER) ISISTestMultiple[1].PVValue REAL 1 testArrayStruct2[2] none")
}

#Read single bool from struct in array in struct
record(bi, "$(P)readBool1") {
    field(SCAN, "I/O Intr")
    field(DTYP, "asynUInt32Digital")
    field(INP, "@asynMask($(PORT), 0, 1)@$(POLLER) testBOOL BOOL 1 testArrayStruct2[4][1][0] none")
    field(ZNAM, "Off")
    field(ONAM, "On")
}

#Read a bool from a bool array within struct
record(bi, "$(P)readBool1") {
    field(SCAN, "I/O Intr")
    field(DTYP, "asynUInt32Digital")
    field(INP, "@asynMask($(PORT), 0, 1)@$(POLLER) testBOOL BOOL 1 testArrayStruct2[3][20] none")
    field(ZNAM, "Off")
    field(ONAM, "On")
}