# I havent implementated the mask bit yet
# Uses a bit offset not a byte offset
record(bi, "$(P)readBool") {
    field(SCAN, "I/O Intr")
    field(DTYP, "asynUInt32Digital")
    field(INP, "@asynMask($(PORT), 0, 0x0001, 1)@$(POLLER) testBOOL BOOL 1 none none") 
    field(ZNAM, "Off")
    field(ONAM, "On")
}

