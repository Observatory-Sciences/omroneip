#Read fields from struct efficiently by downloading the struct in a single read and offsetting to the different dtypes

record(lsi, "$(P)$(R)readString1") {
    field(SCAN, "I/O Intr")
    field(DTYP, "asynOctetRead")
    field(INP, "@asyn($(PORT), 0, 2)@$(POLLER) ISISTestMultiple[$(I)] STRING 1 PVData[1] &str_max_capacity=60&optimise=1")
    field(SIZV, "61")
}

