#Get bool without optimisations (its different)
record(bi, "$(P)readBool") {
    field(SCAN, "I/O Intr")
    field(DTYP, "asynUInt32Digital")
    field(INP, "@asynMask($(PORT), 0, 0x0001, 1)@$(POLLER) ISISTestMultiple[1].Hyst BOOL 1 none none")
    field(ZNAM, "Off")
    field(ONAM, "On")
}

